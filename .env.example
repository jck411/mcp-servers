# MCP Servers — Environment Configuration
#
# Copy to .env and fill in real values:
#   cp .env.example .env
#
# Per-instance port files (.env.<name>) are generated by deploy/setup-systemd.sh

# =============================================================================
# DEPLOYMENT TARGET
# =============================================================================

DEPLOY_HOST=192.168.1.110
DEPLOY_USER=root
DEPLOY_REPO_PATH=/opt/mcp-servers
DEPLOY_SERVICE_USER=mcp

PROXMOX_HOST=192.168.1.11
PROXMOX_USER=root
PROXMOX_CT_ID=110

# =============================================================================
# DEFAULT USER
# =============================================================================

DEFAULT_USER_EMAIL=

# =============================================================================
# SPOTIFY
# =============================================================================

SPOTIFY_CLIENT_ID=
SPOTIFY_CLIENT_SECRET=
SPOTIFY_REDIRECT_URI=

# =============================================================================
# GOOGLE (calendar, gmail, gdrive, notes)
# =============================================================================

GOOGLE_OAUTH_REDIRECT_URI=
# Credential files (copy to credentials/):
#   client_secret_pihome123.json   — Google OAuth client secret
#   googlecloud/sa.json            — GCP service account (for GCS)
GCP_PROJECT_ID=
GCS_BUCKET_NAME=

# =============================================================================
# ACCUWEATHER
# =============================================================================

ACCUWEATHER_API_KEY=
ACCUWEATHER_LOCATION_KEY=

# =============================================================================
# MEMORY SYSTEM (housekeeping server)
# =============================================================================

# Profiles for memory tools — each profile gets isolated storage
# Tools created: remember_<profile>, recall_<profile>, forget_<profile>, etc.
MEMORY_PROFILES=["family"]
OPENROUTER_API_KEY=

# =============================================================================
# EXTERNAL API KEYS
# =============================================================================

OPENAI_API_KEY=
GITHUB_PERSONAL_ACCESS_TOKEN=
CONTEXT7_API_KEY=
CLOUDFLARE_EMAIL=
CLOUDFLARE_API_KEY=

# =============================================================================
# PER-SERVER SETTINGS
# =============================================================================

# shell_control
# HOST_PROFILE_ID=proxmox-mcp
# HOST_ROOT_PATH=/opt/mcp-servers/data/host_profiles
# SHELL_CONTROL_SETTINGS_PANELS=false

# playwright
MCP_PLAYWRIGHT_CDP_PORT=9222

# kiosk_clock_tools
BACKEND_API_URL=https://127.0.0.1:8000

